<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/btnClose">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Data is Yours."
                android:textColor="@color/income_muted"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Local-First &amp; Encrypted\nYour data primarily lives locally on your device. If you use 'Device Sync', transactions are encrypted (AES-128) BEFORE leaving your phone. The cloud server (Firebase) only stores scrambled text—it cannot read your financial details.\n\n2. New Permissions\n• Camera: Used strictly to scan QR codes for linking devices.\n• Internet: Used securely to relay encrypted data between your devices. We do not track your location or browsing history.\n\n3. No Tracking\nThis app has no analytics, no ads, and no 3rd-party trackers. You are completely anonymous.\n\n4. Data Ownership\nYou have full freedom to export your data to CSV or Text files at any time. You hold the encryption keys."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"/>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Close"
        android:textColor="@color/text_primary"
        android:background="@drawable/bg_message_card"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>